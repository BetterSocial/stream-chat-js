{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "lib": ["DOM", "ES6"],
    "noEmitOnError": false,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "outDir": "types/src",
    "strict": true,
    "target": "ES5"
  },
  "include": ["./src/**/*"]
}
